# School Admin System - Environment Configuration
# Copy this file to .env.local for local development
# DO NOT commit .env files to repository

# Database Configuration
DB_HOST=localhost
DB_USERNAME=your_database_username
DB_PASSWORD=your_database_password
DB_NAME=school_admin
DB_PORT=3306

# Application Configuration
APP_NAME="School Admin System"
APP_VERSION=1.0.0
BASE_URL=/
ENVIRONMENT=development

# Timezone (see PHP timezone list)
TIMEZONE=UTC

# Security Settings
ENABLE_HTTPS=false
SECURE_COOKIES=false
SESSION_LIFETIME=3600

# Email Configuration (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=
SMTP_FROM_NAME="School Admin System"

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_UPLOAD_TYPES=jpg,jpeg,png,pdf,doc,docx

# Logging Settings
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Backup Settings
BACKUP_RETENTION_DAYS=30
MAX_BACKUP_FILES=10

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Development Settings (disable in production)
DEBUG_MODE=true
SHOW_SQL_ERRORS=true

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System is under maintenance. Please try again later."